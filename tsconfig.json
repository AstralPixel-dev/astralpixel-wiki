{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ESNext",
        ],
        "isolatedModules": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "target": "ES2019",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        // Vite takes care of building everything, not tsc.
        "noEmit": true
    },
    "include": [
        "**/.vitepress/**/*.ts",
        "**/.vitepress/**/*.js",
        "**/.vitepress/**/*.mts",
        "**/.vitepress/**/*.mjs",
        "**/.vitepress/**/*.vue",
        "eslint.config.mjs",
    ]
}